{
  "name": "order-manager-dev",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack",
        "redhat.vscode-xml",
        "mhutchie.git-graph",
        "editorconfig.editorconfig"
      ]
    }
  },
  "postCreateCommand": "sudo apt-get update -y && sudo apt-get install -y maven"
,
  "forwardPorts": [8080],
  "containerEnv": {
    "JAVA_TOOL_OPTIONS": "-XX:+UseG1GC -Xms512m -Xmx2g"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
